<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:HealthProject.ViewModels"
             x:Class="HealthProject.Views.DiagnosisPredictionPage"
             Title="Diagnosis Prediction">

    <VerticalStackLayout Padding="10" Spacing="10">
        <!-- Entry for entering a symptom -->
        <Entry x:Name="SymptomEntry" 
               Placeholder="Enter a symptom"
               Text="{Binding SymptomInput}" />

        <!-- Button to add the symptom -->
        <Button Text="Add Symptom"
                Command="{Binding AddSymptomCommand}"
                CommandParameter="{Binding Text, Source={x:Reference SymptomEntry}}" />

        <!-- CollectionView to display added symptoms -->
        <CollectionView ItemsSource="{Binding Symptoms}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding .}" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Button to submit symptoms and get prediction -->
        <Button Text="Submit Symptoms"
                Command="{Binding SubmitSymptomsCommand}"/>

        <!-- Label to display the prediction result -->
        <Label Text="{Binding PredictionResult}" 
               FontSize="Medium" 
               TextColor="Blue"
               VerticalOptions="Center" 
               HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
