<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:HealthProject.ViewModels"
             x:Class="HealthProject.Views.DiagnosisPredictionPage">

    <StackLayout Padding="10" Spacing="10">
        <Label Text="Въведете симптоми:" FontAttributes="Bold" />

        <Entry Placeholder="Кашлица, Главоболие и тн."
               Text="{Binding SymptomsInput}" />

        <Button Text="Изпрати"
                Command="{Binding SubmitSymptomsAsyncCommand}"
                HorizontalOptions="Center" />

        <Label Text="Прогноза:" FontAttributes="Bold" />
        <Label Text="{Binding DiagnosisResult}" />

        <Label Text="Препоръчани специалисти:" FontAttributes="Bold" />
        <CollectionView ItemsSource="{Binding RecommendedDoctors}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Label Text="{Binding FullName}" FontAttributes="Bold" />
                        <Label Text="{Binding Specialization}" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
