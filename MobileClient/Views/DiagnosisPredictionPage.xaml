<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:HealthProject.ViewModels"
             x:Class="HealthProject.Views.DiagnosisPredictionPage"
             Title="Diagnosis Prediction">

    <VerticalStackLayout Padding="10" Spacing="10">
        <Entry x:Name="SymptomEntry" 
               Placeholder="Въведи симптом"
               Text="{Binding SymptomInput}" />

        <Button Text="Добави симптома"
                Command="{Binding AddSymptomCommand}"
                CommandParameter="{Binding Text, Source={x:Reference SymptomEntry}}" />

        <CollectionView ItemsSource="{Binding Symptoms}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding .}" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Изпрати симптомите"
                Command="{Binding SubmitSymptomsCommand}"/>

        <Label Text="{Binding PredictionResult}" 
               FontSize="Medium" 
               TextColor="Blue"
               VerticalOptions="Center" 
               HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
