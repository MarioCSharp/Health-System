<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthProject.Views.DiagnosisPredictionPage"
             xmlns:local="clr-namespace:HealthProject.ViewModels"
             Shell.NavBarIsVisible="True">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <Label Text="Въведете симптоми:" Style="{StaticResource HeaderLabelStyle}" />

            <Entry Placeholder="Кашлица, Главоболие и тн."
                   Text="{Binding SymptomsInput}"
                   BackgroundColor="{DynamicResource EntryBackgroundColor}"
                   PlaceholderColor="{DynamicResource EntryPlaceholderColor}" />

            <CollectionView ItemsSource="{Binding FilteredSymptoms}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <ContentView>
                            <StackLayout Orientation="Horizontal" Padding="10" VerticalOptions="Center">
                                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" VerticalOptions="Center" />
                                <Label Text="{Binding Name}" Style="{StaticResource NormalLabelStyle}" VerticalOptions="Center" />
                            </StackLayout>
                        </ContentView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Изпрати"
                    Command="{Binding SubmitSymptomsAsyncCommand}"
                    Style="{StaticResource SubmitButtonStyle}"
                    HorizontalOptions="Center" />

            <Label Text="Прогноза:" Style="{StaticResource HeaderLabelStyle}" />
            <Label Text="{Binding DiagnosisResult, Mode=TwoWay, FallbackValue='No result yet'}"
                   Style="{StaticResource NormalLabelStyle}" />

            <Label Text="Препоръчани доктори:" Style="{StaticResource HeaderLabelStyle}" />

            <CollectionView ItemsSource="{Binding RecommendedDoctors}">
                <CollectionView.EmptyView>
                    <Label Text="Няма препоръчани доктори."
                           Style="{StaticResource NormalLabelStyle}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Style="{StaticResource CardStyle}">
                            <StackLayout>
                                <Label Text="{Binding FullName}" Style="{StaticResource HeaderLabelStyle}" />
                                <Label Text="{Binding Specialization}" Style="{StaticResource NormalLabelStyle}" />
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>
