<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthProject.Views.RemindersAddPage"
             xmlns:local="clr-namespace:HealthProject.ViewModels"
             BackgroundColor="#fff"
             Title="RemindersAddPage">
    <ContentPage.Resources>
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="Medium" />
            <Setter Property="TextColor" Value="#007ACC" />
            <Setter Property="Margin" Value="0,0,0,5" />
        </Style>
        <Style x:Key="EntryStyle" TargetType="Entry">
            <Setter Property="FontSize" Value="Medium" />
            <Setter Property="BackgroundColor" Value="#E0F7FA" />
            <Setter Property="TextColor" Value="#007ACC" />
            <Setter Property="PlaceholderColor" Value="#B0BEC5" />
            <Setter Property="Margin" Value="0,0,0,15" />
        </Style>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#007ACC" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="FontSize" Value="Medium" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="HeightRequest" Value="50" />
            <Setter Property="Margin" Value="0,15,0,0" />
        </Style>
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="TextColor" Value="#007ACC" />
            <Setter Property="FontSize" Value="Medium" />
            <Setter Property="HeightRequest" Value="50" />
            <Setter Property="Margin" Value="0,0,0,15" />
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            <Frame BackgroundColor="#FFFFFF" CornerRadius="10" Padding="20" HasShadow="True">
                <StackLayout Spacing="20">

                    <Label Text="Име на напомняне:" Style="{StaticResource LabelStyle}" 
                   AutomationProperties.IsInAccessibleTree="True" 
                   AutomationProperties.Name="Hospital Name" />
                    <Entry x:Name="HospitalNameEntry" Placeholder="Въведате името на напомнянето" Style="{StaticResource EntryStyle}" 
                   Text="{Binding Reminder.Name}" 
                   AutomationProperties.IsInAccessibleTree="True" 
                   AutomationProperties.Name="Hospital Name Entry" />

                    <Label Text="Тип на напомняне:" Style="{StaticResource LabelStyle}" 
                   AutomationProperties.IsInAccessibleTree="True" 
                   AutomationProperties.Name="Location" />
                    <Entry x:Name="LocationEntry" Placeholder="Профилактичен преглед и тн..." Style="{StaticResource EntryStyle}"  
                   Text="{Binding Reminder.Type}" 
                   AutomationProperties.IsInAccessibleTree="True" 
                   AutomationProperties.Name="Location Entry" />

                    <Label Text="Дата на напомняне:" FontSize="Medium" />
                    <DatePicker Date="{Binding Reminder.RemindDate}" />

                    <Button Text="Добавяне" Style="{StaticResource ButtonStyle}" 
                    Command="{Binding SubmitCommand}" 
                    AutomationProperties.IsInAccessibleTree="True" 
                    AutomationProperties.Name="Add Hospital Button" />
                </StackLayout>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>