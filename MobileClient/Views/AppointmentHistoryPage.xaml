<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthProject.Views.AppointmentHistoryPage"
             xmlns:local="clr-namespace:HealthProject.ViewModels"
             Title="AppointmentHistoryPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Записани часове"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Start"
                   TextColor="#007ACC"
                   Margin="20"/>

            <CollectionView ItemsSource="{Binding History}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <Frame CornerRadius="10" 
                                   BorderColor="#007ACC" 
                                   Margin="10" 
                                   Padding="10" 
                                   HasShadow="True" 
                                   BackgroundColor="White">
                                <StackLayout>
                                    <Label Text="{Binding ServiceName}" 
                                           FontSize="18" 
                                           FontAttributes="Bold"
                                           VerticalOptions="Center"
                                           TextColor="Black"/>
                                    <Label Text="{Binding DoctorName}" 
                                           FontSize="16" 
                                           VerticalOptions="Center"
                                           TextColor="Gray"/>
                                    <Label Text="{Binding Date}" 
                                           FontSize="14" 
                                           VerticalOptions="Center"
                                           TextColor="Gray"/>
                                    <Button Text="Добави оценка" 
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type local:AppointmentHistoryViewModel}}, Path=AddRatingCommand}" 
                                            CommandParameter="{Binding Id}" 
                                            IsVisible="{Binding IsVisible}" />
                                </StackLayout>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            
            <Image Source="nothing_found.png"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Grid.Row="1"
                   IsVisible="{Binding History.Count, Converter={StaticResource IsCollectionEmptyConverter}}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
