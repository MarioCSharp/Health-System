<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:HealthProject.ViewModels"
             x:Class="HealthProject.Views.AddRatingPage"
             Title="Add Rating"
             x:DataType="local:AddRatingViewModel">

    <VerticalStackLayout Padding="20">

        <Label 
            Text="Rating (1 to 5):"
            FontSize="Medium" />
        <Entry 
            Placeholder="Enter a rating between 1 and 5"
            Keyboard="Numeric"
            Text="{Binding Rating.Rating, Mode=TwoWay}" />

        <Label 
            Text="Comment:"
            FontSize="Medium"
            Margin="0,10,0,0" />
        <Editor 
            Placeholder="Write your comment here"
            HeightRequest="100"
            Text="{Binding Rating.Comment, Mode=TwoWay}" />

        <Button 
            Text="Add Rating"
            Command="{Binding AddRatingCommand}"
            Margin="0,20,0,0" 
            BackgroundColor="#007AFF"
            TextColor="White" />

    </VerticalStackLayout>
</ContentPage>
