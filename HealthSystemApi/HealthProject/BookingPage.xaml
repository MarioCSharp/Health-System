<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthProject.BookingPage"
             xmlns:local="clr-namespace:HealthProject.ViewModels"
             Title="BookingPage"
             Shell.NavBarIsVisible="False">
    
    <StackLayout Padding="20">
        <Label Text="Select Date:" FontSize="Medium" />
        <DatePicker Date="{Binding SelectedDate}" />

        <Label Text="Available Hours:" FontSize="Medium" Margin="0,20,0,0" />
        <Picker ItemsSource="{Binding AvailableHours}" />
    </StackLayout>
</ContentPage>